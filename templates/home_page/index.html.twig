<h1>Home Page Content</h1>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Tytuł</th>
            <th>Treść</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.title }}</td>
                <td>{{ item.content }}</td>
                <td>
                    <a href="{{ path('home_page_edit', { id: item.id }) }}">Edytuj</a> |
                    <a href="{{ path('home_page_delete', { id: item.id }) }}">Usuń</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
